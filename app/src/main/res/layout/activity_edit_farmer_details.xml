<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scrollbarStyle="insideOverlay">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/topLayout">



                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/profpic1"
                    android:background="@drawable/circularbuttonprofpic"
                    android:scaleType="fitXY"
                    android:id="@+id/profPicImageButton"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/profPicImageButton"
                    android:text="First Name:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/firstNameLabel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/profPicImageButton"
                    android:layout_below="@+id/firstNameLabel"
                    android:text="Last Name:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/lastNameLabel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/profPicImageButton"
                    android:layout_below="@+id/lastNameLabel"
                    android:text="Mobile No.:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/mobileNumberLabel"/>
                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/firstNameLabel"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="30dp"
                    android:maxLength="50"
                    android:hint="First Name"
                    android:paddingLeft="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/firstName"
                    android:inputType="none"/>

                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/firstName"
                    android:layout_toRightOf="@+id/lastNameLabel"
                    android:hint="Last Name"
                    android:paddingLeft="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/lastName"
                    android:maxLength="50"
                    android:inputType="none"
                    />

                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/mobileNumberLabel"
                    android:layout_below="@+id/lastName"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:inputType="number"
                    android:hint="Mobile Number"
                    android:paddingLeft="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/mobileNumber"
                    android:maxLength="10"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/topLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Aadhar No:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/aadharNoLabel"/>
                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_toRightOf="@+id/aadharNoLabel"
                    android:hint="Adhaar Number"
                    android:paddingLeft="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/adhaarNumber"
                    android:inputType="none"
                    android:maxLength="12"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/aadharNoLabel"
                    android:text="Address 1:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/address1label"/>
                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/address1label"
                    android:layout_marginHorizontal="30dp"
                    android:layout_below="@+id/adhaarNumber"
                    android:hint="Address 1"
                    android:paddingLeft="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/address1"
                    android:maxLength="50"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/address1label"
                    android:text="Address 2:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/address2label"/>

                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_toRightOf="@id/address2label"
                    android:layout_below="@+id/address1"
                    android:hint="Address 2"
                    android:paddingLeft="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/address2"
                    android:maxLength="50"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:text="Gender:"
                    android:textSize="20dp"
                    android:layout_below="@id/villageName"
                    android:id="@+id/label1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/address2label"
                    android:text="Village:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/VillageNameLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Village"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/VillageNameLabel"
                    android:layout_below="@id/address2"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/villageName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/address2label"
                    android:layout_toRightOf="@+id/villageName"
                    android:text="District:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/DistrictNameLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/DistrictNameLabel"
                    android:layout_below="@id/address2"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/districtName"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/villageName"
                    android:layout_toRightOf="@+id/label1"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/radioGroup"
                    android:inputType="none">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:id="@+id/radiobuttonMale"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:id="@+id/radiobuttonFemale"
                        android:layout_marginHorizontal="5dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:id="@+id/radiobuttonOthers"
                        android:layout_marginRight="0dp"/>

                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/radioGroup"
                    android:text="Date Of Birth:"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/DateOfBirthLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroup"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/DateOfBirthLabel"
                    android:text="DOB"
                    android:textAlignment="center"
                    android:id="@+id/DOBtextView"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/DOBtextView"
                    android:layout_alignBaseline="@+id/DOBtextView"
                    android:text="Age: "
                    android:layout_marginLeft="30dp"
                    android:textSize="20dp"
                    android:id="@+id/ageLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ageLabel"
                    android:layout_alignBaseline="@+id/DOBtextView"
                    android:text="Age"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:id="@+id/ageTextView"

                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>