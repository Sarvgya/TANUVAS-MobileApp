<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/checkboxcardview"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/othersquestionscheckbox"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mineral Mixture Separation"
                    android:textSize="15dp"
                    android:id="@+id/othersquestionscheckboxtextview"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Black"
                    android:layout_toLeftOf="@+id/othersquestionscheckbox"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/opensans_regular"/>

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>




