<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="Please Select District"
                android:textSize="25dp"
                android:id="@+id/districtSelectTV"/>


            <Spinner
                android:id="@+id/spinnerDistrictSelect"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/districtSelectTV"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:defaultFocusHighlightEnabled="true"
                >

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerDistrictSelect"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="Please Select Village"
                android:textSize="25dp"
                android:id="@+id/villageSelectTV"/>

            <Spinner
                android:id="@+id/spinnerVillageSelect"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/villageSelectTV"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:defaultFocusHighlightEnabled="true"
                >

            </Spinner>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerVillageSelect"
                android:id="@+id/containerView"
                android:visibility="invisible">


                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="30dp"
                    android:hint="Username"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/addOfficialUsernameEditText"

                    android:inputType="textEmailAddress"/>

                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/addOfficialUsernameEditText"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:hint="Password"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/addOfficialPasswordEditText"
                    android:inputType="textPassword"/>

                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/addOfficialPasswordEditText"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:hint="Fullname"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/addOfficialFullnameEditText"
                    android:inputType="textPersonName"/>

                <EditText
                    android:layout_width="1080dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/addOfficialFullnameEditText"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:hint="Phone Number"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/addOfficialPhonenumberEditText"
                    android:inputType="number"
                    android:maxLength="10"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Super Admin?"
                    android:textSize="20dp"
                    android:layout_below="@+id/addOfficialPhonenumberEditText"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/label1"
                    android:padding="3dp"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label1"
                    android:layout_below="@id/addOfficialPhonenumberEditText"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/superAdminCheckBox"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_button"
                    android:text="Add"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/label1"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/goButton"
                    />

            </RelativeLayout>


        </RelativeLayout>



    </ScrollView>


</RelativeLayout>