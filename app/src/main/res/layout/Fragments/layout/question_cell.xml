<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/othersquestionfoldingcell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backSideColor="#5773FF"
        app:cameraHeight="30"
        app:additionalFlipsCount="3"
        app:animationDuration="1500"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

            </RelativeLayout>



        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/cardview_others_questions">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_downarrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/othersquestionsdownarrow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_toLeftOf="@+id/othersquestionsverified"
                    android:text="abcdefgggggggg ndewnjfnfdjnfdnnkfj djdjf cfjk jdnjkf cndsjckdf kjcnfjkn"
                    android:textSize="30dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/othersquestionstextview"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/verified_icon"
                    android:tint="@color/colorPrimary"
                    android:alpha="0"
                    android:id="@+id/othersquestionsverified"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/othersquestionstextview"
                    android:layout_marginBottom="20dp"
                    android:text="absd"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:alpha="0"
                    android:id="@+id/othersquestionstextviewhidden"/>

            </RelativeLayout>

        </FrameLayout>

    </com.ramotion.foldingcell.FoldingCell>

</RelativeLayout>